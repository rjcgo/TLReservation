<% if user_signed_in? && current_user.isAdmin? %>
	<main class="wrapper" id="sidenav-container">
	    <%= render partial: 'sidenav', :locals => {:sect => "users"} %>
	    <section id="users-admin">
			<header>
		    	<%= render partial: 'header', :locals => header("Users") %>
			</header>
	        <ul class="list-group">
	        	<% @users.each do |user| %>
		            <li class="list-item list-item-primary">
		                <h3 class="title">
		                    <i class="fa fa-user"></i> <%= user.email %>
		                </h3>
		                <% if user.isAdmin? %>
			                <small class="subtitle">
		                        <i class="fa fa-cogs"></i> Administrator
		                    </small>
		                <% else %>
							<button type="button" class="make-admin-btn modal-open" 
								data-href="<%= admin_makeAdmin_path(user) %>"
								data-target="#confirm-modal" data-method="post">
								<i class="fa fa-lock"></i> Make Admin
							</button>
		                <% end %>
		            </li>
		        <% end %>
	        </ul>
	    </section>
	</main>
	<%= render partial: 'partials/confirm_modal', locals: modal_content("users") %>
<% else %>
	<%= render 'error' %>
<% end %>