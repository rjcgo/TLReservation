<% if user_signed_in? && current_user.isAdmin? %>
	<main class="wrapper">
		<article>
			<%= render partial: 'sidenav', :locals => {:sect => "users"} %>
			<section id="milo" class="tabcontent">
				<h2>
					<i class="fa fa-user-circle sidenav-toggle"></i> Users
				</h2>
				<ul>
					<% @users.each do |user| %>
						<li class="list-item list-item-user">
							<div class="user-email">
								<h3 class="title">
									<i class="fa fa-user"></i> <%= user.email %>
								</h3>
							</div>
							<div class="user-classification">
								<% if user.isAdmin? %>
									<small class="badge badge-current-user">
										<i class="fa fa-cogs"></i> Administrator
									</small>
								<% else %>
									<%= link_to '<i class="fa fa-lock"></i> Make Admin'.html_safe, admin_makeAdmin_path(user), method: :post, data: { confirm: 'You will be granting '+user.email+' administrator privileges. This cannot be undone. Click OK to proceed.' } %>
								<% end %>
							</div>
							<div style="clear: both;"></div>
						</li>
					<% end %>
				</ul>
			</section>
		</article>
	</main>
<% else %>
	<%= render 'error' %>
<% end %>