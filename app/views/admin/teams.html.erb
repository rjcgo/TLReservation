<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="home.js"></script>
<% if user_signed_in? && current_user.isAdmin? %>
	<main class="wrapper">
		<article>
			<%= render partial: 'sidenav', :locals => {:sect => "teams"} %>

			<section id="testlines" class="tabcontent">
				<div class="tabcontent-header">
					<h2 id="testlines-label"><i class="fa fa-users sidenav-toggle"></i> Teams</h2>

					<h2 id="add-testline" style="cursor: pointer;"><i class="fa fa-plus"></i><%= content_tag :a, ' New Team', :class=> "new-testline-link", :onclick => "activate_modal(0)" %></h2>
				</div>
				<% if @teams.blank? %>
					<div class="wrapper-greeting">
						<div class="alert alert-success alert-dismissible" role="alert">
						  	<h4 class="alert-heading">There are no teams yet.</h4>
						</div>
					</div>

				<% end %>

				<div class="card-deck card-deck-special">
					<% balls = pokelist %>
					<% @teams.each do |team| %>
						<div class="card">
							<div class="card-header bg-blue">
								<i class="<%= balls[team.id % 20] %>"></i>
								<h3><%= team.name %></h3>
							</div>

							<div class="card-content">
								<div class="card-title-admin" style="padding-top: 0;">
								<%= content_tag :button, 'Edit', :onclick => "activate_modal(#{team.id})", :class => "card-btn-admin" %>
								<%= content_tag :button, 'Delete', :onclick => "activate_modal(-#{team.id})", :class => "card-btn-admin" %>
								</div>
							</div>
						</div>
						<%= content_tag :div, :class => "modal", :id => team.id do -%>
							<div class="container reservation-form">  
								<div class="modal-content">
									<%= form_for(team, :html => {:class => "reserve"}) do |f| %>
										<div class="modal-header">
											<%= content_tag :span, 'x', :class => "close", :onclick => "deactivate_modal(#{team.id})" %>
											<h3>Edit Team</h3>
										</div>
										<fieldset>
											<%= f.text_field :name, :placeholder => "Name", :tabindex => "1", :required => "required" %>
										</fieldset>
										
										<fieldset>
											<button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Edit team</button>
										</fieldset>
									<% end %>
								</div>
							</div>
						<% end %>
						<div class="modal-as" id="-<%= team.id %>">
							<div class="modal-content-as" style="max-width: 400px;">
								<div class="modal-header-as bg-red">
									<h4 class="modal-title-as"><i class="fa fa-trash"></i> Delete</h4>
									<button type="button" class="modal-close-as bg-red" onclick="deactivate_modal(-<%= team.id %>)">&times;</button>
								</div>
								<div class="modal-body-as">
									<p class="modal-text">Are you sure you want to delete <%= team.name %>?</p>
								</div>
								<div class="modal-footer-as">
									<%= link_to 'Delete', team, method: :delete, :class => "modal-btn-as bg-red" %>
									<button type="button" class="modal-btn-as" onclick="deactivate_modal(-<%= team.id %>)">Cancel</button>
								</div>
							</div>
						</div>
					<% end %>
				</div>
			</section>
		</article>
	</main>	
	<%= content_tag :div, :class => "modal", :id => "0" do -%>
		<div class="container reservation-form">  
			<div class="modal-content">
				<%= form_for(@team, :html => {:class => "reserve"}) do |f| %>
					<div class="modal-header">
						<%= content_tag :span, 'x', :class => "close", :onclick => "deactivate_modal(0)" %>
						<h3>Add new team</h3>
					</div>
					<fieldset>
						<%= f.text_field :name, :placeholder => "Name", :tabindex => "1", :required => "required" %>
					</fieldset>
					
					<fieldset>
						<button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Add team</button>
					</fieldset>
				<% end %>
			</div>
		</div>
	<% end %>
<% else %>
	<%= render 'error' %>
<% end %>

<script>
	function activate_modal(id) {
		var s = document.getElementById(id);
	    s.style.display = "block";
	}

	function deactivate_modal(id) {
		var s = document.getElementById(id);
	    s.style.display = "none";
	}
</script>

<style type="text/css">

	.row {
	  width: 100%;
	}

	#testlines{
		border-top: 1px solid #999;
		/*padding: 2%;*/
		margin: 0 auto;
	}

	.tabcontent-header{
		position: relative;
	}
	#add-testline{
		position: absolute;
		right: 0;
		top: 0;
		color:#000;
	}
	
	.new-testline-link{
		color: #000;
		text-decoration: none;
	}

	.card-btn-admin {
	    width: 100%;
	    color: #000;
	    background: #fff;
	    border: 1px solid #000;
	    border-radius: 0.25em;
	    padding: 8px 16px;
	    align-self: flex-end;
	    margin-top: 5px;
	}

	.card .card-btn-admin:hover {
   		background: #ccc;
	}

</style>
<style>
	/* The Modal (background) */
	.modal {
	    display: none; /* Hidden by default */
	    position: fixed; /* Stay in place */
	    z-index: 1; /* Sit on top */
	    padding-top: 100px; /* Location of the box */
	    left: 0;
	    top: 0;
	    width: 100%; /* Full width */
	    height: 100%; /* Full height */
	    overflow: auto; /* Enable scroll if needed */
	    background-color: rgb(0,0,0); /* Fallback color */
	    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
	}

	/* Modal Content */
	.modal-content {
	    position: relative;
	    background-color: #fefefe;
	    margin: auto;
	    -webkit-animation-name: animatetop;
	    -webkit-animation-duration: 0.4s;
	    animation-name: animatetop;
	    animation-duration: 0.4s
	}

	/* Add Animation */
	@-webkit-keyframes animatetop {
	    from {top:-300px; opacity:0} 
	    to {top:0; opacity:1}
	}

	@keyframes animatetop {
	    from {top:-300px; opacity:0}
	    to {top:0; opacity:1}
	}

	/* The Close Button */
	.close {
	    color: black;
	    float: right;
	    font-size: 28px;
	    font-weight: bold;
	}

	.close:hover,
	.close:focus {
	    color: #ccc;
	    text-decoration: none;
	    cursor: pointer;
	}
	.modal-header {
	    padding: 2px 16px;
	}

	.modal-body {padding: 2px 16px;}
</style>