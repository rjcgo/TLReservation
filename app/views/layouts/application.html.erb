<!DOCTYPE html>
<html>
	<head>
		<title>Test Line Reservation</title>
		<%#= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width">

		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
		<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
		crossorigin="anonymous">

		<%= stylesheet_link_tag "style" %>

		<style type="text/css">
			.navbar-nav input[type="email"],
			.navbar-nav input[type="password"]{
				display: table-cell;
				padding: 6px 8px;
				border-top-right-radius: 0.25em;
				border-bottom-right-radius: 0.25em;
				border: 0;
				font-size: 14px;
				width: 160px;
				line-height: 1.68em;
			}

			.input-group .input-addon{
				display: table-cell;
				background: #f1f1f1;
				line-height: 1.4em;
				padding: 6px 14px;
				border-top-left-radius: 0.25em;
				border-bottom-left-radius: 0.25em;
			}

			.input-group{
				display: table;
				float: left;
				margin-right: 10px;
			}

			.form-submit{
				padding: 6px 14px;
				background: transparent;
				font-size: 14px;
				line-height: 1.6em;
				border: 1px solid #fff;
				color: #fff;
				border-radius: 0.25em;
			}

			.form-submit:hover{
				background: rgba(255, 255, 255, 0.1);
			}

			.slide_left:hover {
				-webkit-transition: ease-out 0.4s;
				-moz-transition: ease-out 0.4s;
				transition: ease-out 0.4s;
				box-shadow: inset 400px 0 0 0 #ccc;
			}

			.wrapper-greeting{
				padding: 0 10px;
				padding-top: 15px;
				position: float;
				z-index: 1;
				background-color: #EAEAE2;
			}

			.card-description{
				padding: 0 10px;
			}

			.card-description-content{
				height: 100px;
				text-align: justify;
			}

			.card-deck {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
			}

			.card-content-admin{
				display: flex;
				flex-direction: column;
				justify-content: space-between;
				background: #fff;
				border-bottom-left-radius: 0.25em;
				border-bottom-right-radius: 0.25em;
				padding-top: 15px;
			}

			.card-title-admin{
				padding: 0 10px;
				text-align: center;
				text-decoration: none;
				display: inline-block;
			}

			.card-btn-admin {
				width: 100%;
				color: #000;
				background: #fff;
				border: 1px solid #000;
				border-radius: 0.25em;
				padding: 8px 16px;
	    		align-self: flex-end;
	    		margin-top: 5px;
			}

			.card .card-btn-admin:hover {
   				background: #ccc;
			}

			.alert {
				padding: 15px;
				border: 1px solid transparent;
				border-radius: 4px;
				background-color: #BDC3C7;
			}

			.alert h4 {
				margin-top: 0;
				color: inherit;
			}

			button.close {
				-webkit-appearance: none;
				padding: 0;
				cursor: pointer;
				background: transparent;
				border: 0;
			}

			#testlines{
				border-top: 1px solid #999;
				/*padding: 2%;*/
				margin: 0 auto;
			}

			.tabcontent-header{
				position: relative;
			}

			#add-testline{
				position: absolute;
				right: 0;
				top: 0;
				color:#000;
			}
			
			.new-testline-link{
				color: #000;
				text-decoration: none;
			}

			.user-classification{
				float: right;
			}

			.user-email{
				float: left;
    			font-size: 0.9em;
			}

			.badge-current-user{
				background: #0275d8;
    			font-size: 0.9em;
			}

			.list-item-user{
				padding: 2%;
			}
		</style>
	</head>
	<body>
		<nav id="main-nav" style="width: 100%;">
			<div class="wrapper">
				<button type="button" id="burger-nav">
					<span class="bar1"></span>
					<span class="bar2"></span>
					<span class="bar3"></span>
				</button>
				<a href="/" class="navbar-brand">
					<i class="fa fa-server icon-lg" id="logo"></i>
					<h1>Test Line Reservation</h1>
				</a>
				<div class="navbar-nav">
					<h2>Main Navigation</h2>
					<% if user_signed_in? %>
						<ul>
							<% if current_user.isAdmin? %>
								<li><a href="/testlines/reservations"><i class="fa fa-calendar-check-o"></i>    Reservations</a></li>
								<li><a href="/admin/home"><i class="fa fa-cogs"></i> Administrator</a></li>
							<% end %>
							<li><%= link_to '<i class="fa fa-sign-out"></i> Logout'.html_safe, destroy_user_session_path, method: :delete %></li>
						</ul>
					<% else %>
						<%= form_for("user", :url => user_session_path) do |f| %>
							<div class="input-group">
								<span class="fa fa-user input-addon"></span>
								<%= f.email_field :email, :placeholder => "Email" %>
							</div>
							<div class="input-group">
								<span class="fa fa-key input-addon"></span>
								<%= f.password_field :password, :placeholder => "password" %>
							</div>
							<%= f.submit 'Sign in', :class => "form-submit" %>
						<% end %>
					<% end %>
				</div>
			</div>
		</nav>
		<div>
			<%= yield %>
		</div>
	</body>
</html>