<div id="reserve-modal" class="modal">
	<div class="modal-dialog">
        <div class="modal-content">
            <%= form_tag("", id: "submit") do %>
                <div class="modal-header">
                    <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title">Reserve</h3>
                </div>
                <div class="modal-body">
                    <label for="title">Title:</label>
                    <input type="text" id="title" class="form-control" 
                        name="reservation[name]" placeholder="Test title" required>

                    <label for="team-name">Team Name:</label>
                    <input type="hidden" id="team-id" name="reservation[team_id]">
                    <input type="text" id="team-name" class="form-control" value="" readonly>

                    <label for="email">Email:</label>
                    <input type="hidden" id="user-id" name="reservation[user_id]">
                    <input type="email" id="email" class="form-control" value="" readonly>
                    
                    <label for="description">Description:</label>
                    <textarea id="description" class="form-control"
                        name="reservation[description]" placeholder="Test description" required>
                    </textarea>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="modal-btn" data-dismiss="modal">Submit</button>
                </div>
            <% end %>
        </div>
    </div>
</div>