<div class="container reservation-form">  
  <%= form_for((@testline), :html => {:class => "reserve"}) do |f| %>
    <h3>Create New Testline </h3>
    <fieldset>
      <%= f.text_field :name, :placeholder => "Name", :tabindex => "1", :required => "required" %>
    </fieldset>

    <fieldset>
      <%= f.text_field :ip_address, :placeholder => "IP Address", :tabindex => "1", :required => "required" %>
    </fieldset>

    <fieldset>
      <%= f.text_field :port_number, :placeholder => "Port Number", :tabindex => "1", :required => "required" %>
    </fieldset>

    <% if current_user.isAdmin? %>
    <fieldset>
      <p>Under Maintenance?
      <%= f.check_box :name, :placeholder => "Under Maintenance?", :tabindex => "1", :required => "required" %>
      </p>
    </fieldset>
    <%end%>

    <fieldset>
      <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
    </fieldset>
  <% end %>
</div>
