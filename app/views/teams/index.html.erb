<% if user_signed_in?%>
    <main class="wrapper">
        <% if @teams.count != 0 %>
            <section id="teams">
                <h2>Select Your Team</h2>
                <div class="outer-border-hidden">
                    <ul class="letters-grid letters-grid-lg">
                        <% @teams.each do |team| %>
                            <li>
                                <%= link_to team_path(team) do %>
                                    <span class="<%= letterPicker(team.name, "lg") %>"></span>
                                    <%= team.name %>
                                <% end %>
                            </li>
                        <% end %>
                    </ul>
                </div>
            </section>
        <% else %>
            <div class="notice-wrapper">
                <h4>There are no teams yet.</h4>
            </div>
        <% end %>
    </main>
<% end %>